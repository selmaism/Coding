<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtuelt Kj√¶ledyr</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        #pet {
            font-size: 100px;
            transition: transform 0.2s;
        }
        .button {
            font-size: 20px;
            margin: 10px;
            padding: 10px 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="pet">üê±</div>
    <p id="message">Kj√¶ledyret ditt er lykkelig!</p>
    <button class="button" onclick="feed()">Gi mat</button>
    <button class="button" onclick="play()">Lek</button>
    <button class="button" onclick="clean()">Vask</button>

    <script>
        let needsTimer;  // Timer som m√• resettes hver gang et behov blir m√∏tt
        let currentNeed = null;  // N√•v√¶rende behov

        // Kj√∏rer p√•minnelsen hvert minutt
        let reminderTimer = setInterval(remind, 6000);

        function remind() {
            if (currentNeed !== null) return; // Ikke minne p√• et nytt behov f√∏r det gamle er m√∏tt

            let randomEvent = Math.floor(Math.random() * 3);
            if (randomEvent === 0) {
                setNeed("sulten", "Katten din er sulten! Gi den mat.");
            } else if (randomEvent === 1) {
                setNeed("lek", "Katten din vil leke! Lek med den.");
            } else if (randomEvent === 2) {
                setNeed("vask", "Katten din trenger en vask! Vask den.");
            }
        }

        function setNeed(need, message) {
            currentNeed = need;
            document.getElementById('message').innerText = message;
            resetNeedsTimer(); // Start timeren for √• se om behovet blir m√∏tt
        }

        function resetNeedsTimer() {
            clearTimeout(needsTimer);
            needsTimer = setTimeout(() => {
                document.getElementById('message').innerText = "Katten din har reist bort for √• finne en bedre eier!";
                document.getElementById('pet').innerText = "üö∂‚Äç‚ôÇÔ∏è";  // Katten g√•r bort
                disableButtons(); // Deaktiver knappene siden katten har forlatt deg
                clearInterval(reminderTimer); // Stopp alle p√•minnelser
            }, 3000); // 30 sekunder for √• m√∏te behovet
        }

        function disableButtons() {
            const buttons = document.querySelectorAll('.button');
            buttons.forEach(button => button.disabled = true);
        }

        function clearNeed() {
            currentNeed = null;
            clearTimeout(needsTimer); // Stoppe timeren n√•r behovet er m√∏tt
        }

        function feed() {
            if (currentNeed === "sulten") {
                document.getElementById('message').innerText = "Katten din spiser og er glad!";
                animatePet();
                clearNeed();
            } else {
                document.getElementById('message').innerText = "Katten trenger ikke mat akkurat n√•.";
            }
        }

        function play() {
            if (currentNeed === "lek") {
                document.getElementById('message').innerText = "Katten din leker og er lykkelig!";
                animatePet();
                clearNeed();
            } else {
                document.getElementById('message').innerText = "Katten trenger ikke √• leke akkurat n√•.";
            }
        }

        function clean() {
            if (currentNeed === "vask") {
                document.getElementById('message').innerText = "Katten din blir vasket og er forn√∏yd!";
                animatePet();
                clearNeed();
            } else {
                document.getElementById('message').innerText = "Katten trenger ikke en vask akkurat n√•.";
            }
        }

        function animatePet() {
            let pet = document.getElementById('pet');
            pet.style.transform = "scale(1.2)";
            setTimeout(() => {
                pet.style.transform = "scale(1)";
            }, 200);
        }
    </script>
</body>
</html>
